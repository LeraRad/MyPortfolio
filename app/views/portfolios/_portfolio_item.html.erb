<p><%= link_to portfolio_item.title, portfolio_show_path(portfolio_item)%></p>

<p><%= portfolio_item.subtitle%></p>

<p><%= portfolio_item.body%></p>

<%= image_tag portfolio_item.thumb_image unless portfolio_item.thumb_image.nil? %>
<%= link_to "Edit", edit_portfolio_path(portfolio_item) if logged_in?(:site_admin) %>
<%= link_to "Delete", portfolio_show_path(portfolio_item), data: { turbo_method: :delete, turbo_confirm: "Are you sure, that you want to delete this Portfolio Item?"} if logged_in?(:site_admin) %>