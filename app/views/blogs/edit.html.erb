<h1>Editing blog</h1>

<h1>Edit this Blog Item</h1>

<%= form_with(model: @blog_item) do |form| %>
  
  <div>
    <%= form.label :title, style: "display: block" %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :body, style: "display: block" %>
    <%= form.text_area :body %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
</div>
